<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form.InfoNasabahPart1Activity">
    <include
        layout="@layout/new_toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:padding="@dimen/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_bg"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_nama_profile"
                android:padding="@dimen/padding5"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_title"/>
            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">
                <EditText
                    android:id="@+id/et_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding5"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:ems="10"/>
            </android.support.design.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_tempat_lahir"
                android:padding="@dimen/padding5"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_title"/>
            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">
                <EditText
                    android:id="@+id/et_tmp_lhr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding5"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:ems="10"/>
            </android.support.design.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_tanggal_lahir"
                android:padding="@dimen/padding5"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_title"/>
            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">
                <TextView
                    android:id="@+id/tv_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding5"
                    android:textColor="@color/black"/>
            </android.support.design.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_no_ktp"
                android:padding="@dimen/padding5"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_title"/>
            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">
                <EditText
                    android:id="@+id/et_no_ktp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding5"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:ems="10"/>
            </android.support.design.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_nomor_telepon"
                android:padding="@dimen/padding5"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_title"/>
            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_telp_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding5"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:ems="10"/>
                    <ImageButton
                        android:id="@+id/add_telp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/padding5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:src="@drawable/ic_round_add_24px"/>
                </RelativeLayout>
            </android.support.design.card.MaterialCardView>
            <android.support.design.card.MaterialCardView
                android:id="@+id/cv_telp2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_telp_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding5"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:ems="10"/>
                </RelativeLayout>
            </android.support.design.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_alamat"
                android:padding="@dimen/padding5"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_title"/>
            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">
                <EditText
                    android:id="@+id/et_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding5"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:inputType="textMultiLine"/>
            </android.support.design.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_foto_debitur"
                android:textAlignment="center"
                android:padding="@dimen/padding5"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_title"/>
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding5"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/img_ktp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="@dimen/padding20"
                            android:background="@color/white"
                            android:src="@drawable/ic_icon_kamera"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding5"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:text="@string/txt_ktp"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="@dimen/padding10"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/img_foto_diri"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="@dimen/padding20"
                            android:background="@color/white"
                            android:src="@drawable/ic_icon_kamera"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding5"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:text="@string/txt_foto_diri"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="@dimen/padding10"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/img_kk"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="@dimen/padding20"
                            android:background="@color/white"
                            android:src="@drawable/ic_icon_kamera"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding5"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:text="@string/txt_kk"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <android.support.design.button.MaterialButton
                android:id="@+id/btn_next_inf_nas_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/txt_next"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>