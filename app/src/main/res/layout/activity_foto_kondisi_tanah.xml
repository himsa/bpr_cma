<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form.FotoKondisiTanahActivity">
    <include
        layout="@layout/new_toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding"
            android:background="@color/grey_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sub_title"
                android:padding="@dimen/padding5"
                android:text="@string/txt_foto_tanah"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding5"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/et_rmh_muka"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="@dimen/padding5"
                        android:src="@drawable/images_none"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/black">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sub_title"
                            android:layout_gravity="center_vertical"
                            android:textAlignment="center"
                            android:text="@string/txt_tampak_muka"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding5"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/et_rmh_blkng"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="@dimen/padding5"
                        android:src="@drawable/images_none"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/black">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sub_title"
                            android:layout_gravity="center_vertical"
                            android:textAlignment="center"
                            android:text="@string/txt_tampak_belakang"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding5"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/et_rmh_kanan"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="@dimen/padding5"
                        android:src="@drawable/images_none"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/black">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sub_title"
                            android:layout_gravity="center_vertical"
                            android:textAlignment="center"
                            android:text="@string/txt_tampak_kanan"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding5"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/et_rmh_kiri"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="@dimen/padding5"
                        android:src="@drawable/images_none"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/black">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sub_title"
                            android:layout_gravity="center_vertical"
                            android:textAlignment="center"
                            android:text="@string/txt_tampak_kiri"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding5"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/et_rmh_dalam"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="@dimen/padding5"
                        android:src="@drawable/images_none"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/black">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sub_title"
                            android:layout_gravity="center_vertical"
                            android:textAlignment="center"
                            android:text="@string/txt_dalam"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding5"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/et_rmh_lain"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="@dimen/padding5"
                        android:src="@drawable/images_none"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/black">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sub_title"
                            android:layout_gravity="center_vertical"
                            android:textAlignment="center"
                            android:text="@string/txt_lain_lain"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding5"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/et_rmh_sktr1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="@dimen/padding5"
                        android:src="@drawable/images_none"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/black">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sub_title"
                            android:layout_gravity="center_vertical"
                            android:textAlignment="center"
                            android:text="@string/txt_sktr"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding5"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/et_rmh_sktr2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="@dimen/padding5"
                        android:src="@drawable/images_none"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/black">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sub_title"
                            android:layout_gravity="center_vertical"
                            android:textAlignment="center"
                            android:text="@string/txt_sktr2"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding20" />
            <android.support.design.button.MaterialButton
                android:id="@+id/btn_next_foto_tanah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="@string/txt_next"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>