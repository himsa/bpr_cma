<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form.TabunganDepositoActivity">
    <include
        layout="@layout/new_toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding"
            android:background="@color/grey_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sub_title"
                android:padding="@dimen/padding5"
                android:text="@string/txt_nomor_rekening"/>
            <EditText
                android:id="@+id/et_nomor_rekening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding5"
                android:textSize="@dimen/sub_title"
                android:background="@drawable/full_rounded_corner_white"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:ems="10"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sub_title"
                android:padding="@dimen/padding5"
                android:text="@string/txt_nomor_bilyet"/>
            <EditText
                android:id="@+id/et_nomor_bilyet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding5"
                android:textSize="@dimen/sub_title"
                android:background="@drawable/full_rounded_corner_white"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:ems="10"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sub_title"
                android:padding="@dimen/padding5"
                android:text="@string/txt_nama_profile"/>
            <EditText
                android:id="@+id/et_nama_rekening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding5"
                android:textSize="@dimen/sub_title"
                android:background="@drawable/full_rounded_corner_white"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:ems="10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/sub_sub_title"
                    android:padding="@dimen/padding5"
                    android:text="@string/txt_nominal"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp"
                        android:focusable="false"
                        android:textSize="@dimen/sub_title"
                        android:padding="@dimen/padding5"
                        android:background="@drawable/rounded_corner_grey"/>
                    <EditText
                        android:id="@+id/et_nominal_rekening"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding5"
                        android:textSize="@dimen/sub_title"
                        android:background="@drawable/rounded_corner_white"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:ems="10"/>
                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding" />
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding5"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_tabungan"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="@dimen/padding20"
                    android:background="@color/white"
                    android:src="@drawable/ic_icon_galeri"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding5"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="@string/txt_foto_dokumen"/>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding" />
            <android.support.design.button.MaterialButton
                android:id="@+id/btn_selesai_tabungan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_selesai"
                android:layout_gravity="end"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>