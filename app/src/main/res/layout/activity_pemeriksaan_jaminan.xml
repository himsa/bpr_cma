<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form.PemeriksaanJaminanActivity"
    android:background="@drawable/login_bg">
    <include
        layout="@layout/new_toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageButton
                android:id="@+id/tanah_bangunan"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/tanah_bangunan"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <View
                android:id="@+id/spacer"
                android:layout_below="@+id/tanah_bangunan"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageButton
                android:id="@+id/kendaraan"
                android:layout_below="@+id/spacer"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/kendaraan"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <View
                android:id="@+id/spacer2"
                android:layout_below="@+id/kendaraan"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageButton
                android:id="@+id/tabungan_deposito"
                android:layout_below="@+id/spacer2"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/tabungan_deposito"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>