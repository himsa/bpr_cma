<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/padding5"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_customer_info_kredit"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="@dimen/padding10"
            android:scaleType="fitXY"
            android:src="@drawable/dummy_photo" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10">
            <LinearLayout
                android:id="@+id/ll_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/status_kredit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text"
                    android:text="@string/txt_status_kredit"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:id="@+id/txt_status_kredit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding5"
                    android:layout_marginLeft="@dimen/padding5"
                    android:layout_marginStart="@dimen/padding5"
                    android:textAlignment="center"
                    android:textSize="@dimen/text"
                    android:text="@string/txt_status_kredit"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="bottom" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_nama"
                android:layout_below="@+id/ll_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Himsa"
                    android:textSize="@dimen/title"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pogung lor"
                    android:textSize="@dimen/text"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>
            <TextView
                android:id="@+id/phone"
                android:layout_below="@+id/ll_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+6285658970892"
                android:padding="@dimen/padding5"
                android:textAlignment="center"
                android:textSize="@dimen/sub_title"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"/>
            <android.support.design.button.MaterialButton
                android:id="@+id/btn_hubungi"
                android:layout_below="@+id/phone"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_detail" />
        </RelativeLayout>
    </LinearLayout>
</android.support.design.card.MaterialCardView>