<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@drawable/login_bg">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageButton
            android:id="@+id/ib_pengajuan"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/dashboard_btn_pengajuan"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <View
            android:id="@+id/spacer"
            android:layout_below="@+id/ib_pengajuan"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <ImageButton
            android:id="@+id/ib_informasi"
            android:layout_below="@+id/spacer"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/dashboard_btn_informasi"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <View
            android:id="@+id/spacer2"
            android:layout_below="@+id/ib_informasi"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <ImageButton
            android:id="@+id/ib_proses"
            android:layout_below="@+id/spacer2"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/dashboard_btn_proses"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </RelativeLayout>

</RelativeLayout>